<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 博客 -->
<mapper namespace="com.david.emdblog.dao.BloggerDao">
	<resultMap type="Blogger" id="BloggerResult">
		<result property="id" column="id" />
		<result property="userName" column="userName" />
		<result property="password" column="password" />
		<result property="nickName" column="nickName" />
		<result property="sign" column="sign" />
		<result property="proFile" column="proFile" />
		<result property="imageName" column="imageName" />
	</resultMap>

	<!--查询博主信息。 -->
	<select id="find" resultMap="BloggerResult">
		select * from t_blogger where id=1;
	</select>
	<!-- 根据用户名查找用户 -->
	<select id="findBloggerByUsername" parameterType="String" resultMap="BloggerResult">
		select * from t_blogger where userName=#{userName}
	</select>

</mapper>